    position:absolute; inset:0; background:var(--border-input); border-radius:16px; transition:.2s;
}
.toggle-slider-sm:before {
    content:''; position:absolute; height:12px; width:12px; left:2px; bottom:2px;
    background:#fff; border-radius:50%; transition:.2s;
}
.toggle-switch-sm input:checked + .toggle-slider-sm { background:var(--success); }
.toggle-switch-sm input:checked + .toggle-slider-sm:before { transform:translateX(14px); }

/* Footer page checkboxes */
.cz-checkbox-group { display:flex; flex-direction:column; gap:6px; margin-top:4px; }
.cz-check-label {
    display:flex; align-items:center; gap:6px;
    font-size:13px; color:var(--text-primary); cursor:pointer;
    text-transform:none; letter-spacing:0; font-weight:400;
}
.cz-check-label input[type="checkbox"] { width:14px; height:14px; cursor:pointer; accent-color:var(--accent); }
</style>
