var _cpTarget = null; // { swatch, textInput }

function czSyncFromHex(textInput) {
    var v = textInput.value.trim();
    if (/^#[0-9a-fA-F]{6}$/.test(v)) {
        var swatch = textInput.previousElementSibling;
        if (swatch) swatch.style.background = v;
