<script>
// ── Accordion: only one section open at a time, persisted via localStorage ──
function czToggle(btn) {
    var section = btn.parentElement;
    var wasOpen = section.classList.contains('open');
    var sections = document.querySelectorAll('.cz-section');
    // Close all
    sections.forEach(function(s) { s.classList.remove('open'); });
    // Toggle clicked
    if (!wasOpen) {
        section.classList.add('open');
        // Save index
        for (var i = 0; i < sections.length; i++) {
            if (sections[i] === section) {
                localStorage.setItem('cz_open_section', i);
                break;
            }
        }
    } else {
        localStorage.removeItem('cz_open_section');
    }
}
// Restore open section on load
(function() {
    var idx = localStorage.getItem('cz_open_section');
    var sections = document.querySelectorAll('.cz-section');
    if (idx !== null && sections[parseInt(idx, 10)]) {
        sections[parseInt(idx, 10)].classList.add('open');
    } else if (sections.length) {
        sections[0].classList.add('open');
    }
})();

// ── Nav Sortable (drag to reorder) ──
(function() {
    var NAV_ITEMS = {
        portfolio: { label: 'portfolio_label', defaultLabel: '{{ settings.portfolio_label | default(value="experiences") }}', enabled: {{ settings.portfolio_enabled | default(value="false") }} },
        blog:      { label: 'blog_label',      defaultLabel: '{{ settings.blog_label | default(value="journal") }}',      enabled: {{ settings.journal_enabled | default(value="true") }} },
        contact:   { label: 'contact_label',   defaultLabel: '{{ settings.contact_label | default(value="contact") }}',   enabled: true }
    };
    var orderInput = document.querySelector('[data-setting="nav_order"]');
    var container = document.getElementById('nav-sortable');
    if (!orderInput || !container) return;

    // Map nav keys to their category template IDs
    var CAT_TEMPLATES = { portfolio: 'tpl-cat-portfolio', blog: 'tpl-cat-blog' };

    function buildItems() {
        container.innerHTML = '';
        var order = orderInput.value.split(',').map(function(s){ return s.trim(); }).filter(Boolean);
        // Ensure all known keys are present
        ['portfolio','blog','contact'].forEach(function(k){ if (order.indexOf(k) === -1) order.push(k); });
        order.forEach(function(key) {
            var cfg = NAV_ITEMS[key];
            if (!cfg) return;
            var row = document.createElement('div');
            row.className = 'nav-sort-item';
            row.setAttribute('data-key', key);
            row.draggable = true;
            var labelInput = document.querySelector('[data-setting="' + cfg.label + '"]');
            var displayName = labelInput ? labelInput.value : cfg.defaultLabel;
            row.innerHTML = '<div class="nav-sort-header">' +
                '<span class="nav-sort-handle">&#9776;</span>' +
                '<span class="nav-sort-label">' + displayName + '</span>' +
                '<input type="text" class="nav-sort-input" data-setting="' + cfg.label + '" name="' + cfg.label + '" value="' + displayName.replace(/"/g,'&quot;') + '" required>' +
                (!cfg.enabled ? '<span class="nav-sort-disabled">(disabled)</span>' : '') +
                '</div>';
            // Inject category sub-section from template if available
            var tplId = CAT_TEMPLATES[key];
            if (tplId && cfg.enabled) {
                var tpl = document.getElementById(tplId);
                if (tpl) row.appendChild(tpl.content.cloneNode(true));
            }
            container.appendChild(row);
        });
        initDrag();
        syncLabelInputs();
        czConditions();
    }

    function syncLabelInputs() {
        // Remove old standalone label inputs (they're now inside sortable rows)
        container.querySelectorAll('.nav-sort-input').forEach(function(inp) {
            var setting = inp.getAttribute('data-setting');
            // Remove any duplicate outside the sortable
            document.querySelectorAll('[data-setting="' + setting + '"]').forEach(function(el) {
                if (el !== inp && !el.closest('#nav-sortable') && el.type !== 'hidden') el.remove();
            });
        });
    }

    function updateOrder() {
        var items = container.querySelectorAll('.nav-sort-item');
        var keys = [];
        items.forEach(function(el){ keys.push(el.getAttribute('data-key')); });
        orderInput.value = keys.join(',');
    }

    var _dragEl = null;
    function initDrag() {
        container.querySelectorAll('.nav-sort-item').forEach(function(el) {
            el.addEventListener('dragstart', function(e) {
                _dragEl = el;
                el.classList.add('dragging');
                e.dataTransfer.effectAllowed = 'move';
            });
            el.addEventListener('dragend', function() {
                el.classList.remove('dragging');
                _dragEl = null;
                container.querySelectorAll('.nav-sort-item').forEach(function(i){ i.classList.remove('drag-over'); });
                updateOrder();
            });
            el.addEventListener('dragover', function(e) {
                e.preventDefault();
                if (_dragEl && _dragEl !== el) {
                    el.classList.add('drag-over');
                    var rect = el.getBoundingClientRect();
                    var mid = rect.top + rect.height / 2;
                    if (e.clientY < mid) {
                        container.insertBefore(_dragEl, el);
                    } else {
                        container.insertBefore(_dragEl, el.nextSibling);
                    }
                }
            });
            el.addEventListener('dragleave', function() { el.classList.remove('drag-over'); });
        });
    }

    buildItems();
})();

