(function() {
    var hidden = document.querySelector('[data-setting="footer_behavior_pages"]');
    if (!hidden) return;
    var boxes = document.querySelectorAll('[data-footer-page]');
    // Init checkboxes from saved value
    var saved = (hidden.value || '').split(',').filter(Boolean);
    boxes.forEach(function(cb) {
        cb.checked = saved.indexOf(cb.getAttribute('data-footer-page')) !== -1;
        cb.addEventListener('change', syncFooterPages);
    });
    function syncFooterPages() {
        var vals = [];
        boxes.forEach(function(cb) { if (cb.checked) vals.push(cb.getAttribute('data-footer-page')); });
        hidden.value = vals.join(',');
    }
})();

